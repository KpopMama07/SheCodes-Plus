// Challenge 1
// Create an array weekDays with all days of the week, console log the array
let days = [
	"Monday",
	"Tuesday",
	"Wednesday",
	"Thursday",
	"Friday",
	"Saturday",
	"Sunday"
];
console.log(days);
// Challenge 2
// Log ‘Monday’ and ‘Sunday’
console.log(days[0]);
console.log(days[6]);

// Challenge 3
// Change ‘Sunday’ by ‘Funday’
// Log the array
days[6] = "Funday";
console.log(days);

// Challenge 4
// Remove Monday and Tuesday
// Log the array
days.shift();
days.shift();
console.log(days);

// Challenge 5
// Log every day of the week this way:`Temperature on Monday is 18 degrees’
function showDay(day) {
	console.log(`The Temperature on ${day} is 18 degrees.`);
}
days.forEach(showDay);
